{% extends 'layouts/admin.twig' %}
{% block title %}Add Subject{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block content %}
   <div class="panel panel-default">
       <div class="panel-heading">
           <div class="panel-title">
               <strong>Add Subject</strong>
           </div>
           <div class="panel-body">
               {% if(session_has('success')) %}
                   <div class="alert alert-success">
                       <button type="button" class="close" data-dismiss="alert">Ã—</button>
                       <h4>Success!</h4>
                       {{ session_get('success') }}
                   </div>
               {% endif %}

               <form action="{{ url_to('admin/sub.add') }}" method="post" novalidate="" id="form2" class="form-horizontal" data-parsley-validate="">
                   <div class="form-group">
                       <label class="control-label">Subject Name <span class="asterisk">*</span></label>
                       <input type="text" name="name" required="" class="form-control"  />
                   </div>

                   <div class="form-group">
                       <label class="control-label">Tag Line <span class="asterisk">*</span> </label>
                       <input type="text" name="tag_line" required="" class="form-control" />
                   </div>

                   <div class="form-group">
                       <label class="control-label">Description <span class="asterisk">*</span></label>
                       <textarea id="redactor" name="description"  class="form-control">

                       </textarea>
                       <input type="hidden" name="id" value="{{ id }}"/>
                   </div>
                   <button type="submit" class="btn btn-success">Save</button>
                   <a href="{{ url_to('admin/subject') }}"  class="btn btn-danger">Cancel</a>
               </form>
           </div>
       </div>
   </div>
{% endblock %}

