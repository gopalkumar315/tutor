{% extends 'layouts/admin.twig' %}
{% block title %}Add Subject{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="panel-title">
                <strong>Add Subject</strong>
            </div>
            <div class="panel-body">
                {% if(session_has('success')) %}
                    <div class="alert alert-success">
                        <button type="button" class="close" data-dismiss="alert">Ã—</button>
                        <h4>Success!</h4>
                        {{ session_get('success') }}
                    </div>
                {% endif %}

                <form action="{{ url_to('admin/sub.edit_done') }}" method="post" novalidate="" id="form2" class="form-horizontal" data-parsley-validate="">
                    <div class="controls">
                        <br/>
                        <label class="control-label">Subject Name <span class="asterisk">*</span></label>
                        <input type="text" name="name" value="{{ data.name }}" required="" class="form-control"  />
                    </div>

                    <div class="controls">
                        <br/>
                        <label class="control-label">Tag Line <span class="asterisk">*</span> </label>
                        <input type="text" name="tag_line" value="{{ data.tag_line }}" required="" class="form-control" />
                    </div>

                    <div class="controls">
                        <br/>
                        <label for="subject_id">Category</label>
                        <select name="subject_id" class="form-control" multiple id="">
                            {% for row in category %}
                                {% if row.id==data.id %}
                                    <option value="{{ row.id }}" selected> {{ row.name }} </option>
                                    {% else %}
                                        <option value="{{ row.id }}"> {{ row.name }} </option>
                                {% endif %}
                            {% endfor %}
                        </select>
                    </div>

                    <div class="controls">
                        <br/>
                        <label class="control-label">Description <span class="asterisk">*</span></label>
                       <textarea id="redactor" name="description"  class="form-control">
                            {{ data.description }}
                       </textarea>
                       <input type="hidden" name="id" value="{{ data.id }}"/>
                        <br/>
                    </div>
                    <button type="submit" class="btn btn-success">Save</button>
                    <a href="{{ url_to('admin/sub.view/'~data.parent_id) }}"  class="btn btn-danger">Cancel</a>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

