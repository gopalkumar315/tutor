                        <option ng-repeat="item in category" value="{{ '{{ item.id }}' }}" >{{ '{{ item.name }}' }}</option>
                        <option value="">Select a Category</option>
                        </select>

                        <select name="course" ng-model="sel_course"  class="select">
                            <option ng-repeat="item in my_course"  value="{{ '{{ item.id }}' }}">{{ '{{ item.name }}' }}</option>
                            <option value="">Select Course</option>
                        </select>

                        <input type="submit" class="submit" value="Search">
                    </div>
                </form>

            </div>
        </div>

        <div class="item">
            <!-- Set the first background image using inline CSS below. -->
            <div class="fill" style="background-image:url({{ asset('front/images/bg1.png') }});"></div>
            <div class="carousel-caption">
                <h2>Find An Awsome <span>Tutor</span> For You</h2>

                <form method="post" name="form1" onsubmit="return validate();" action="{{ url_to('index/tutor') }}">
                    <div>
                        <select name="category" class="select" ng-change="course()"  ng-model="c_id">

                            <option ng-repeat="item in category" value="{{ '{{ item.id }}' }}" >{{ '{{ item.name }}' }}</option>
                            <option value="">Select a Category</option>
                        </select>

                        <select name="course" ng-model="sel_course"  class="select">
                            <option ng-repeat="item in my_course"  value="{{ '{{ item.id }}' }}">{{ '{{ item.name }}' }}</option>
                            <option value="">Select Course</option>
                        </select>

                        <input type="submit" class="submit" value="Search">
                    </div>
                </form>

            </div>
        </div>
    </div>
</header>


