{% extends  'layouts/tutor.twig' %}
{% block title %}Summary{% endblock %}
{% block content %}
    <div class="row-fluid">
        <div class="col-md-12">
            <div class="content">

                <div class="heading">
                    <h1>Summary</h1>
                </div>

                <div class="box">
                    <div class="title">
                        Summary
                    </div>
                </div>

                <div class="box_border">

                    <table style="width:100%;">
                        <tr>
                            <td>Account Type: </td>
                            <td> <b> {{ data.type|capitalize }}</b></td>
                        </tr>

                        <tr>
                            <td>Your reference link: </td>
                            <td> <b> {{ url_to('tutor/'~data.id) }}</b></td>
                        </tr>

                        <tr>
                            <td>Last Logout: </td>
                            <td> <b> {{ data.last_logout|date('d-M-y h:i:s') }}</b></td>
                        </tr>
                    </table>

                </div>

            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>

        .box_border table tr td:first-child{
            width: 20% !important;
        }
        
    </style>
{% endblock %}