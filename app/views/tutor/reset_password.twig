{% extends 'layouts/tutor.twig' %}
{% block title %}Reset Password{% endblock %}
{% block content %}
    <div class="row-fluid">
        <div class="col-md-12">
            <div class="content">
                <div class="heading">
                    <h1>Password Reset</h1>
                </div>

                {% if session_has('success') %}
                    <div class="success_alert">{{ session_get('success') }}</div>
                {% endif %}

                <div class="box">
                    <div class="title">
                        Password Reset
                    </div>
                </div>

                <div class="box_border">
                    <div class="form">
                        <form action="{{ url_to('tpanel/index/resetdone') }}" method="post">
                        <table>
                            <tr>
                                <td>Username</td>
                                <td>{{ data.username }}</td>
                            </tr>

                            <tr>
                                <td>Old Password</td>
                                <td><input type="password" name="old_password" class="txt_box"/>
                                    <div class="error">
                                        {{ errors.first('old_password') }}
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td>New Password</td>
                                <td><input type="password" name="password" class="txt_box"/>

                                    <div class="error">
                                        {{ errors.first('password') }}
                                    </div>
                                </td>
                            </tr>


                            <tr>
                                <td>Confirm Password</td>
                                <td><input type="password" name="password_confirm" class="txt_box"/>

                                    <div class="error">
                                        {{ errors.first('password_confirm') }}
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td></td>
                                <td><br/><input type="submit" value="Reset" class="submit_btn"/></td>
                            </tr>
                        </table>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}