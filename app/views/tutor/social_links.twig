{% extends 'layouts/tutor.twig' %}
{% block title %} Social Links {% endblock %}

{% block content %}
    <div class="row-fluid">
        <div class="col-md-12">
            <div class="content">
                <div class="heading">
                    <h1>Socail LInks</h1>
                </div>
                
                <div class="box">
                    <div class="title">
                        Socail Links
                    </div>
                </div>
                
                <div class="box_border">
                    <div class="form">
                        <form action="{{ url_to('tpanel/index/social') }}" method="post">
                            <table>
                                <tr>
                                    <td class="fb">Facebook</td>
                                    <td>
                                        <input type="text" name="facebook" value="{{ input_old('facebook',data.facebook) }}" class="txt_box"/>
                                        <div class="error">
                                            {{ errors.first('facebook') }}
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Twitter</td>
                                    <td>
                                        <input type="text" class="txt_box" name="twitter" value="{{ input_old('twitter',data.twitter) }}"/>
                                        <div class="error">
                                            {{ errors.first('twitter') }}
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Google Plus</td>
                                    <td>
                                        <input type="text" class="txt_box" value="{{ input_old('google_plus',data.google_plus) }}" name="google_plus"/>
                                        <div class="error">
                                            {{ errors.first('google_plus') }}
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Linked In</td>
                                    <td>
                                        <input type="text" class="txt_box" value="{{ input_old('linked_in',data.linked_in) }}" name="linked_in" />

                                        <div class="error">
                                            {{ errors.first('linked_in') }}
                                        </div>
                                    </td>
                                </tr>

                                <tr>
                                    <td></td>
                                    <td>
                                        <br/>
                                        <input type="submit" value="Save" class="submit_btn" /></td>
                                </tr>
                            </table>                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}