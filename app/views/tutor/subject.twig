{% extends 'layouts/tutor.twig' %}
{% block title %}Subject{% endblock %}
{% block content %}
    <div class="row-fluid">
        <div class="col-md-12">
            <div class="content">
                <div class="heading">
                    <div class="row">
                        <div class="col-md-6">
                            <h1>Subject</h1>
                        </div>

                        <div class="col-md-6 text-right" style="margin-top:10px;">
                            <a href="{{ url_to('tpanel/subject/modify') }}" class="btn btn-sm btn-primary">Add Subjects</a>
                        </div>
                    </div>


                </div>

                <div class="box">
                    <div class="title">
                        Tutor's Subject
                    </div>
                </div>

                <div class="box_border">
                     {% for category in data %}
                        <div class="row">
                            <div class="col-md-6">
                                <b>Category :-</b> {{ category.category_name }}
                                <br/>
                                <b>Subjects :-</b>
                                <br/>
                            </div>
                            <div class="col-md-6 text-right">
                                <a href="{{ url_to('tpanel/subject/modify') }}" class="btn btn-sm btn-primary">Add</a>
                                <a href="{{ url_to('tpanel/subject/modify') }}" class="btn btn-sm btn-danger">Delete</a>
                            </div>
                        </div>

                        <div class="row">
                            {% for subject  in category.subjects %}
                                <div class="col-md-3 col-sm-6 col-xs-6">
                                    {{ subject.subject_name }}
                                </div>
                            {% endfor %}
                        </div>
                        <hr/>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}